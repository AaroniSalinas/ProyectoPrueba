<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Modify the background light */
        .bgp-light {
            background-color: #ede5db;
        }
        /* Modify the background medium */
        .bgp-medium {
            background-color: #d1b5a3;
        }
        /* Modify the background black */
        .bgp-dark {
            background-color: #6d5b4b
        }
        /* Modify the text color */
        .colorp-dark {
            color: #6d5b4b;
        }
        .colorp-medium {
            color: #d1b5a3;
        }
        .colorp-light {
            color: #ede5db;
        }
        
        .margin {
            margin-top: 40px;
        }
    </style>
    <script src="https://kit.fontawesome.com/6599bab734.js" crossorigin="anonymous"></script>
</head>

<!--Colores: Header: #ede5db  Footer:#6d5b4b   Intermedio: #d1b5a3
Fuentes: League Spartan, League Gothic-->

<body>
    <!--Barra de Navegación-->
    <nav class="navbar navbar-expand-lg fixed-top bgp-light">

        <div class="container-fluid">
            <a class="navbar-brand" href="~/Home/Index">
                <img src="/Imagenes/NARAM.svg" alt="" width="150" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active colorp-dark" aria-current="page" href="#">HOMBRE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link colorp-dark" href="#">MUJER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link colorp-dark" href="#">NIÑOS</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link active colorp-dark" aria-current="page" href="~/Home/Carrito"><i class="fas fa-shopping-cart"></i></a>
                        </li>*@
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2 bgp-medium" type="search" placeholder="Buscar" aria-label="Buscar">
                    <button class="btn bgp-medium" type="submit"><i class="fas fa-search"></i></button>
                </form>
                <a class="nav-link colorp-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item colorp-dark bgp-medium" href="#">Iniciar Sesión</a></li>
                    <li><a class="dropdown-item colorp-dark bgp-medium" href="~/Home/Registro">Registrarse</a></li>
                </ul>
                <a class="nav-link active colorp-dark" aria-current="page" href="~/Home/Carrito"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </nav>


    <div class="container body-content margin">
        @RenderBody()
        <hr />
        <nav class="navbar fixed-bottom bgp-dark">
            <div class="container-fluid">
                <a class="navbar-brand colorp-light" href="#">INFO DEL FOOTER</a>
            </div>
        </nav>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
