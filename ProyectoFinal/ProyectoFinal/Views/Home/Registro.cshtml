
@{
    ViewBag.Title = "Registro";
}
<link href="~/Content/bootstrap-float-label.css" rel="stylesheet" />
<style>
    .registro input, select, textarea {
        max-width: 80%;
    }

    .registro .form-control {
        border-color: #AB8B76 !important;
        color: #AB8B76 !important;
        border-bottom-width: thick;
        margin: 10px;
    }
</style>
<cente>
    <h2>Registro</h2>
 <cente>

        <div class="registro row">
            <div class="registro col-md-7" style="border-right: 1px solid #AB8B76 ">

                <form>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="Name" name="Name" type="text" placeholder="Nombre" />
                        <label for="Nombre">Nombres</label>
                    </span>


                    <span class="registro has-float-label">
                        <input class="registro form-control" id="Ape" name="Ape" type="text" placeholder="Apellidos" />
                        <label for="Apellidos">Apellidos</label>
                    </span>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="Correo" name="Correo" type="text" placeholder="Correo Electrónico" />
                        <label for="Correo">Correo Electrónico</label>
                    </span>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="CCorreo" name="CCorreo" placeholder="Confirmación de Correo Electrónico" />
                        <label for="ConCorreo">Confirmación de Correo Electrónico</label>
                    </span>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="Telf" name="Telf" placeholder="Teléfono" />
                        <label for="Telf">Teléfono</label>
                    </span>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="Contra" name="Contra" type="password" placeholder="Contraseña" />
                        <label for="Contra">Contraseña</label>
                    </span>

                    <span class="registro has-float-label">
                        <input class="registro form-control" id="CContra" name="CContra" type="password" placeholder="Confirmación de Contraseña" />
                        <label for="CContra">Confirmación de Contraseña</label>
                    </span>
                    <cente>

                        <button type="button" class="registro btn btn-lg col-md-6" style=' color: white; background-color: #AB8B76 !important; border: 1px solid #AB8B76 !important; box-shadow:  5px 10px #D1B5A3'>
                            REGISTRO

                        </button>
                    </cente>

                </form>
            </div>
            <div class='col-md-5' style='padding-top:10%; '>
                <button type="button" class="registro btn  btn-lg col-md-12" style=' background-color: white; color: #AB8B76 !important; border: 1px solid #AB8B76 !important'>

                    FACEBOOK
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="registro bi bi-facebook" viewBox="0 0 16 16">
