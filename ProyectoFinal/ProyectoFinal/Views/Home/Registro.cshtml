@model ProyectoFinal.usuario

@{
    ViewBag.Title = "Registro";
}
<link href="~/Content/bootstrap-float-label.css" rel="stylesheet" />
<style>
    .registro input, select, textarea {
        max-width: 80%;
    }

    .registro .form-control {
        border-color: #AB8B76 !important;
        color: #AB8B76 !important;
        border-bottom-width: thick;
        margin: 10px;
    }
</style>
<cente>
    <h2>Registro</h2>
    <cente>

        <div class="registro row">
            <div class="registro col-md-7" style="border-right: 1px solid #AB8B76 ">

                <form method="post">

                    <span class="registro has-float-label">
                        <label for="Nombre">Nombres</label>
                        @Html.EditorFor(model => model.usuarioNombre, new { htmlAttributes = new { @class = "registro form-control", id = "Name", name = "Name", type = "text", placeholder = "Nombre" } })
                        @Html.ValidationMessageFor(model => model.usuarioNombre, "", new { @class = "text-danger" })
                        
                    </span>


                    <span class="registro has-float-label">
                        <label for="Apellidos">Apellidos</label>
                        @Html.EditorFor(model => model.usuarioApellido, new { htmlAttributes = new { @class = "registro form-control", id = "Ape", name = "Ape", type = "text", placeholder = "Apellidos" } })
                        @Html.ValidationMessageFor(model => model.usuarioApellido, "", new { @class = "text-danger" })

                    </span>

                    <span class="registro has-float-label">
                        <label for="Correo">Correo Electrónico</label>
                        @Html.EditorFor(model => model.usuarioCorreo, new { htmlAttributes = new { @class = "registro form-control", id = "Correo", name = "Correo", type = "text", placeholder = "Correo Electrónico" } })
                        @Html.ValidationMessageFor(model => model.usuarioCorreo, "", new { @class = "text-danger" })


                    </span>


                    <span class="registro has-float-label">
                        <label for="Telf">Teléfono</label>
                        @Html.EditorFor(model => model.usuarioTelefono, new { htmlAttributes = new { @class = "registro form-control", id = "Telf", name = "Telf", placeholder = "Teléfono" } })
                        @Html.ValidationMessageFor(model => model.usuarioTelefono, "", new { @class = "text-danger" })
                    </span>

                    <span class="registro has-float-label">
                        <label for="Contra">Contraseña</label>
                       
                        @Html.EditorFor(model => model.usuarioContrasenia, new { htmlAttributes = new { @class = "registro form-control", id = "Contra", name = "Contra", type = "password", placeholder = "Contraseña" } })
                        @Html.ValidationMessageFor(model => model.usuarioContrasenia, "", new { @class = "text-danger" })

                    </span>


                    <cente>

                        <button type="submit" value="Create" class="registro btn btn-lg col-md-6" style=' color: white; background-color: #AB8B76 !important; border: 1px solid #AB8B76 !important; box-shadow:  5px 10px #D1B5A3'>
                            REGISTRO

                        </button>
                    </cente>

                </form>
            </div>
            <div class='col-md-5' style='padding-top:10%; '>
                <button type="button" class="registro btn  btn-lg col-md-12" style=' background-color: white; color: #AB8B76 !important; border: 1px solid #AB8B76 !important'>

                    FACEBOOK
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="registro bi bi-facebook" viewBox="0 0 16 16">
                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"></path>
                    </svg>
                </button>
                <br>
                <br>
                <button type="button" class="registro btn btn-lg col-md-12" style=' background-color: white; color: #AB8B76 !important; border: 1px solid #AB8B76 !important'>

                    GOOGLE
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="registro bi bi-google" viewBox="0 0 16 16">
                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                    </svg>
                </button>
            </div>
        </div>
