<h2 class="colorp-dark">AÑADIR DIRECCIÓN</h2>

<form class="row g-2">
    <div class="col-md-6">
        <label for="inputNombre" class="form-label colorp-dark">Nombre(s)</label>
        <input type="text" class="form-control colorp-medium" id="inputNombre">
    </div>
    <div class="col-md-6">
        <label for="inputApellidos" class="form-label colorp-dark">Apellidos</label>
        <input type="text" class="form-control" id="inputApellidos">
    </div>
    <div class="col-md-12">
        <label for="inputAddress" class="form-label colorp-dark">Dirección</label>
        <input type="text" class="form-control colorp-medium" id="inputAddress" placeholder="Calle y Número">
    </div>
    <div class="col-md-12">
        <label for="inputAddress2" class="form-label colorp-dark">Puntos de referencia</label>
        <input type="text" class="form-control colorp-medium" id="inputAddress2 " placeholder="Entre calle y calle">
    </div>
    <div class="col-md-6">
        <label for="inputCP" class="form-label colorp-dark">CP</label>
        <input type="text" class="form-control colorp-medium" id="inputCP">
    </div>
    <div class="col-md-6">
        <label for="inputCol" class="form-label colorp-dark">Colonia</label>
        <input type="text" class="form-control colorp-medium" id="inputCol">
    </div>
    <div class="col-md-6">
        <label for="inputCiudad" class="form-label colorp-dark">Ciudad</label>
        <input type="text" class="form-control colorp-medium" id="inputCiudad">
    </div>
    <div class="col-md-6">
        <label for="inputEstado" class="form-label colorp-dark">Estado</label>
        <input type="text" class="form-control colorp-medium" id="inputEstado">
    </div>
    <div class="col-md-6">
        <button type="button" class="btn bgp-medium colorp-light" data-bs-toggle="button" autocomplete="off">Añadir dirección</button>
    </div>
</form>