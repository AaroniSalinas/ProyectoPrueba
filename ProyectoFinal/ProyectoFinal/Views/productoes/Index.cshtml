            @Html.DisplayNameFor(model => model.productoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productoNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productoPrecio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productoExistencia)
